<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.demo.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.demo.entity.UserDo">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="createTime" column="create_time"/>
        <result property="active" column="active"/>
    </resultMap>

    <!--sql 元素-->
    <sql id="FIELDS">
        username,
        password,
        create_time
    </sql>

    <insert id="insertInfo" parameterType="UserDo" useGeneratedKeys="true" keyProperty="id">
        insert into users (
        <include refid="FIELDS"/>
        )
                values (#{username}, #{password}, #{createTime})
    </insert>

    <delete id="deleteUser" parameterType="Integer">
        delete
        from users
        where id = #{id}
    </delete>

    <!--set，if 元素-->
    <update id="updateInfo" parameterType="UserDo">
        update users
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="createTime == null">
                create_time = #{createTime}
            </if>
        </set>
        where id = #{id}
    </update>

    <!--字符串替换-->
    <select id="selectByColumn" parameterType="UserDo" resultMap="BaseResultMap">
        select
        <include refid="FIELDS"/>
        from users
        where ${column} = #{values}
    </select>

    <!--foreach 元素-->
    <select id="selectByIds" resultMap="BaseResultMap">
        select
        <include refid="FIELDS"/>
        from users
                where id in
        <foreach collection="ids" index="" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <!--where,choose 元素-->
    <select id="findActiveUser" resultType="com.demo.entity.UserDo">
        select
        <include refid="FIELDS"/>
        from users
        <where>
            <choose>
                <when test="username != null">
                    username = #{username}
                </when>
                <when test="createTime != null">
                    create_time = ''
                </when>
                <otherwise>
                    and id = #{id}
                </otherwise>
            </choose>
        </where>
    </select>
</mapper>



